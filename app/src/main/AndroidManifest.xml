        <activity
            android:name=".presentation.intomap.IntomapActivity"
            />


        <activity
            android:name=".presentation.named.NamedActivity"
            />

        <activity
            android:name=".presentation.subcomponent.SubComponentActivity"
            />

        <activity
            android:name=".presentation.sub2component.Sub2ComponentActivity"
            />

